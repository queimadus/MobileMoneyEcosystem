<div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h4 class="modal-title" id="myModalLabel">Add a new product</h4>
      </div>
      <div id="new-product-form-container" class="modal-body">
         <%= render 'form', product: @product, submit_name: "Create" %>
      </div>
     <!-- <div class="modal-footer">
        <button class="btn" data-dismiss="modal">Close</button>
        <button class="btn btn-primary">Save changes</button>
      </div> -->

    </div><!-- /.modal-content -->
  </div><!-- /.modal-dalog -->
</div>

<div class="row" style="margin-top: 45px;margin-bottom: 4px;">
  <div class="col-span-3">
    <h1 style="line-height: 0px;display: inline-block;text-transform: uppercase;font-size: 31px;color: #226699;"> <%# current_user.merchant.name &apos;s%> Products </h1>
  </div>
  <div class="col-span-6">
    <%= form_tag products_path, :method => :get, :id=>"product-search-form", :style => "margin-top: 2px;", :remote => true do %>
    <div class="input-group span products-search-bar" style="width: 96%;">

        <input id="products-search " name="q" type="text" class=" " value="<%= @query %>">
        <span class="input-group-btn">
          <i class="product-search-reset glyphicon-remove glyphicon"> </i>
          <button class="btn btn-primary " type="submit">Search</button>
        </span>

    </div>
    <%end%>

  </div>
  <div class="col-span-3 tcenter">
    <%# link_to "Add new product", new_product_path, :remote => true, :class => "btn btn-primary btn-large", :style => "margin-left: 14px;" %>
    <a data-toggle="modal" href="#myModal" class="btn btn-primary" style="margin-left: 14px; margin-top:2px;">Add new product</a>

  </div>
</div>
<div class="row">
  <div id="products-container" class="col-span-9">
    <div class="product-list-loading">
      <div class="product-loading-inner">
        <i class="glyphicon glyphicon-refresh icon-spin"></i>
      </div>
    </div>
    <div id="products-container-inner">
      <%= render 'product_list', :products => @products %>
    </div>
  </div>
  <div class="col-span-3">
     <div class="product-info-panel fade">
        <div class="edit-loading">
            <i class="glyphicon glyphicon-refresh icon-spin"></i>
        </div>
        <div id="product-info-inner">
            <%= "LOL" unless @product.nil? %>
        </div>
     </div>
  </div>
</div>