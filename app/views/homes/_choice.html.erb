<h2>Sign up for an account</h2>

<legend >Pick the type of account: </legend>
<div class="row">
    <div class="col-offset-2 col-span-4">
      <%= link_to  client_registration_path, :method => 'get' do %>
        <div class="register-choice-panel shadow">
           <img class="register-image" src="http://www.colourbox.com/preview/1222921-44780-rear-view-of-people-shopping-at-supermarket.jpg" alt="people shopping">
           <div class="register-image-caption"><span class="type">Client</span><span class="caption">Sign up as a client</span></div>
        </div>
      <% end %>
    </div>
    <div class="col-span-4">
      <%=  link_to  merchant_registration_path, :method => 'get' do%>
        <div class="register-choice-panel shadow">
          <img class="register-image" src="http://yourbusiness.azcentral.com/DM-Resize/photos.demandstudios.com/getty/article/81/203/86486305.jpg?w=600&h=600&keep_ratio=1" alt="corporate selling" style="margin-left: -83px;">
          <div class="register-image-caption"><span class="type">Merchant</span><span class="caption">Sign up as a merchant</span></div>
        </div>
      <% end %>
    </div>
</div>
