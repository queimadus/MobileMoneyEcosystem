<% self.formats = [:json, :html] %>
<%= form_for resource,  :remote => true, :html => {:class => "bank-account-password-form", :data => { :type => 'json' }} do |f| %>
  <div class="control-group">
    <label class="control-label" for="bankaccount">Bank account</label>
    <div class="controls">
      <%= f.text_field :bank_account, :id => "bankaccount",  :placeholder => 'Bank account' %>
      <%=	render 'settings/error_on_form', message: error_on_form(resource.errors,:bank_account) unless resource.errors[:bank_account].empty?  %>
      <span class="input-details">Credit will be deposited into this account</span>
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
  </div>
<% end %>