  <div class=" col-span-5">

    <div class="well">

      <%= form_for(resource, :as => resource_name, :url => register_merchant_path, :html => { :class => ''}) do |f| %>

        <input type="hidden" name="merc" value="1">

        <div class="control-group">
          <% if !@c.nil? and !@c.errors[:name].empty?%>
            <%= label :name, "Name", :class => "control-label field_with_errors"%>
          <% else %>
            <%= label :name, "Name", :class => "control-label"%>
          <%end %>
          <%= red_asterisk %>
          <div class="controls relative">
            <% if !@c.nil? and !@c.errors[:name].empty?%>
              <%= text_field_tag nil, nil, :name => "merchant[name]", :class => "field_with_errors", :placeholder => 'Company name',:autofocus => true, :value => @c.name  %>
            <% else %>
              <%= text_field_tag nil, nil, :name => "merchant[name]",  :placeholder => 'Company name',:autofocus => true %>
            <%end %>
            <%= if !@c.nil? and !@c.errors[:name].empty?
                  render 'layouts/tooltip', message: error_on_form(@c.errors,:name) unless @c.errors[:name].empty?
               end %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :email, "Email", :class => "control-label" %> <%= red_asterisk %>
          <div class="controls relative">
            <%= f.email_field :email,  :placeholder => 'Email' %>
            <%=	render 'layouts/tooltip', message: error_on_form(resource.errors,:email) unless resource.errors[:email].empty?  %>
            <%# error_on_form(resource.errors,:email)  %>
